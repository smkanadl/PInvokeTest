<Project>
  <PropertyGroup>
    <!--https://developercommunity.visualstudio.com/content/problem/30940/cant-remove-netstandard-folder-from-output-path.html-->
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <!--dot net projects-->
    <BaseIntermediateOutputPath>..\..\build\obj\$(MSBuildProjectName)\</BaseIntermediateOutputPath>
    <IntermediateOutputPath>$(BaseIntermediateOutputPath)$(Platform)\$(Configuration)\</IntermediateOutputPath>
    <OutputPath>..\..\build\bin\$(MSBuildProjectName)\$(Configuration)\</OutputPath>
    <!--c++ projects-->
    <OutDir>..\..\build\bin\$(MSBuildProjectName)\$(Configuration)\</OutDir>
    <IntDir>..\..\build\obj\$(MSBuildProjectName)\$(Platform)\$(Configuration)\</IntDir>
  </PropertyGroup>
</Project>
